{
  "version": "1.1.1",
  "manifest_version": 2,
  "name": "404 New Tab",
  "description": "Interesting 404 pages as new tab",
  "background": {
    "scripts": [
      "lib/js/browser-polyfill.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/icon.png"
  },
  "web_accessible_resources": [
    "sidebar.html"
  ],
  "options_ui": {
    "page": "./options.html",
    "open_in_tab": true
  },
  "chrome_url_overrides" : {
    "newtab": "newtab.html"
  }
}
